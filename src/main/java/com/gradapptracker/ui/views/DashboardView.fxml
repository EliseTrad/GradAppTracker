<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradapptracker.ui.controllers.DashboardController">

  <left>
    <VBox spacing="8" style="-fx-background-color:#f5f5f5;" BorderPane.alignment="CENTER_LEFT">
      <padding>
        <Insets top="16" right="8" bottom="16" left="8" />
      </padding>
      <children>
        <Label text="Navigation" style="-fx-font-weight:bold;" />
        <Button text="Dashboard" />
        <Button text="Programs" />
        <Button text="Documents" />
        <Button text="Profile" />
      </children>
    </VBox>
  </left>

  <center>
    <VBox spacing="12" padding="16">
      <children>
        <HBox spacing="12" alignment="CENTER_LEFT">
          <children>
            <Label text="Programs overview" style="-fx-font-size:16px; -fx-font-weight:bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Refresh" fx:id="btnRefresh" onAction="#onRefresh" />
            <Button text="View Program Details" fx:id="btnViewProgram" />
          </children>
        </HBox>

        <TableView fx:id="programTable" prefHeight="400" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn text="ID" fx:id="colId" prefWidth="60" />
            <TableColumn text="Name" fx:id="colName" prefWidth="240" />
            <TableColumn text="Deadline" fx:id="colDeadline" prefWidth="160" />
            <TableColumn text="Status" fx:id="colStatus" prefWidth="120" />
          </columns>
        </TableView>

        <HBox spacing="12" alignment="CENTER_LEFT">
          <children>
            <VBox spacing="4">
              <Label text="Documents" style="-fx-font-weight:bold;" />
              <Label text="Total documents: " />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox spacing="4">
              <Label text="Upcoming deadlines" style="-fx-font-weight:bold;" />
              <Label text="Next: none" />
            </VBox>
          </children>
        </HBox>
      </children>
    </VBox>
  </center>

</BorderPane>