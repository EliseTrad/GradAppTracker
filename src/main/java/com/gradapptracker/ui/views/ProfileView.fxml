<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradapptracker.ui.controllers.ProfileController" spacing="10" alignment="CENTER">

  <padding>
    <Insets top="20" right="20" bottom="20" left="20" />
  </padding>

  <Label text="Profile Settings" style="-fx-font-size:16px; -fx-font-weight:bold;" />

  <GridPane hgap="8" vgap="8">
    <columnConstraints>
      <ColumnConstraints halignment="RIGHT" minWidth="90" />
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <children>
      <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    </children>
  </GridPane>

  <HBox spacing="10" alignment="CENTER">
    <children>
      <Button text="Update" fx:id="btnUpdate" onAction="#onUpdate" />
    </children>
  </HBox>

</VBox>