<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradapptracker.ui.controllers.ProgramController" spacing="12" padding="16">

  <Label text="Programs" style="-fx-font-size:18px; -fx-font-weight:bold;" />

  <TableView fx:id="table" prefHeight="300" VBox.vgrow="ALWAYS" onMouseClicked="#onRowSelect">
    <columns>
      <TableColumn text="ID" fx:id="colId" prefWidth="60" />
      <TableColumn text="Name" fx:id="colName" prefWidth="200" />
      <TableColumn text="Description" fx:id="colDescription" prefWidth="300" />
      <TableColumn text="Deadline" fx:id="colDeadline" prefWidth="140" />
    </columns>
  </TableView>

  <GridPane hgap="8" vgap="8">
    <columnConstraints>
      <ColumnConstraints halignment="RIGHT" minWidth="100" />
      <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <children>
      <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="txtDescription" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="Deadline (yyyy-MM-dd):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="txtDeadline" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </children>
  </GridPane>

  <HBox spacing="8">
    <children>
      <Button text="Add" fx:id="btnAdd" onAction="#onAdd" />
      <Button text="Edit" fx:id="btnEdit" onAction="#onEdit" />
      <Button text="Delete" fx:id="btnDelete" onAction="#onDelete" />
      <Button text="Refresh" fx:id="btnRefresh" onAction="#onRefresh" />
      <Region HBox.hgrow="ALWAYS" />
      <ComboBox fx:id="cbFilterBy" />
      <TextField fx:id="txtFilterValue" />
      <Button text="Filter" fx:id="btnFilter" onAction="#onFilter" />
    </children>
  </HBox>

</VBox>