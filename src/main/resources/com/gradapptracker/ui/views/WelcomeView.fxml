<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<!--
  WelcomeView.fxml - Landing page with login and registration
  Scrollable and fits screen
-->
<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gradapptracker.ui.controllers.WelcomeController" fitToWidth="true" styleClass="welcome-background" stylesheets="@/styles/styles.css">

  <content>
    <VBox alignment="CENTER" spacing="8" styleClass="welcome-content">

      <!-- Welcome Title (logo removed for space) -->
      <VBox alignment="CENTER" spacing="2">
        <Label text="GradAppTracker" styleClass="welcome-title" />
        <Label text="Simplify Your Graduate Applications" styleClass="welcome-subtitle" />
      </VBox>

      <!-- Login/Register Form Container -->
      <VBox styleClass="auth-container" spacing="8" maxWidth="550" prefWidth="550">

        <!-- TabPane for Login/Register -->
        <TabPane fx:id="authTabPane" tabClosingPolicy="UNAVAILABLE" styleClass="auth-tabpane" prefHeight="320" minHeight="280">

          <!-- Login Tab -->
          <Tab text="Login" fx:id="loginTab">
            <content>
              <VBox spacing="10" styleClass="auth-tab-content">
                <Label text="Welcome Back!" styleClass="auth-form-title" />

                <!-- Login Form -->
                <VBox spacing="10">
                  <VBox spacing="4">
                    <Label text="Email:" styleClass="auth-label" />
                    <TextField fx:id="txtLoginEmail" promptText="you@example.com" styleClass="auth-textfield" />
                  </VBox>

                  <VBox spacing="4">
                    <Label text="Password:" styleClass="auth-label" />
                    <PasswordField fx:id="txtLoginPassword" promptText="Enter password" styleClass="auth-textfield" />
                  </VBox>
                </VBox>

                <HBox spacing="10" alignment="CENTER" styleClass="auth-button-container">
                  <Button text="Login" fx:id="btnLogin" onAction="#onLogin" prefWidth="120" styleClass="button-primary,auth-button-primary" />
                  <Button text="New User?" onAction="#onSwitchToRegister" prefWidth="120" styleClass="button-secondary,auth-button-secondary" />
                </HBox>
              </VBox>
            </content>
          </Tab>

          <!-- Register Tab -->
          <Tab text="New User?" fx:id="registerTab">
            <content>
              <VBox spacing="10" styleClass="auth-tab-content">
                <Label text="Create Account" styleClass="auth-form-title" />

                <!-- Register Form -->
                <VBox spacing="10">
                  <VBox spacing="4">
                    <Label text="Full Name:" styleClass="auth-label" />
                    <TextField fx:id="txtRegisterName" promptText="John Doe" styleClass="auth-textfield" />
                  </VBox>

                  <VBox spacing="4">
                    <Label text="Email:" styleClass="auth-label" />
                    <TextField fx:id="txtRegisterEmail" promptText="you@example.com" styleClass="auth-textfield" />
                  </VBox>

                  <VBox spacing="4">
                    <Label text="Password:" styleClass="auth-label" />
                    <PasswordField fx:id="txtRegisterPassword" promptText="Create strong password" styleClass="auth-textfield" />
                  </VBox>
                </VBox>

                <HBox spacing="10" alignment="CENTER" styleClass="auth-button-container">
                  <Button text="Create Account" fx:id="btnRegister" onAction="#onRegister" prefWidth="120" styleClass="button-primary,auth-button-primary" />
                  <Button text="Have Account? Login" onAction="#onSwitchToLogin" prefWidth="150" styleClass="button-secondary,auth-button-secondary" />
                </HBox>
              </VBox>
            </content>
          </Tab>

        </TabPane>
      </VBox>

      <!-- Feature Highlights -->
      <HBox spacing="8" alignment="CENTER" styleClass="feature-container">
        <VBox styleClass="feature-card" spacing="2" prefWidth="140" alignment="CENTER">
          <Label text="ðŸ“š Track" styleClass="feature-label" />
        </VBox>

        <VBox styleClass="feature-card" spacing="2" prefWidth="140" alignment="CENTER">
          <Label text="Manage" styleClass="feature-label" />
        </VBox>

        <VBox styleClass="feature-card" spacing="2" prefWidth="140" alignment="CENTER">
          <Label text="Track Dates" styleClass="feature-label" />
        </VBox>
      </HBox>

    </VBox>
  </content>
</ScrollPane>